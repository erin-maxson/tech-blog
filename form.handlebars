<div class="translucent-form-overlay">
  <form class="new-post-form">
    <h3>Add a New Tech Post to the Blog</h3>
    <div class="row columns">
      <label>Post Title
        <input type="text" name="post-name" placeholder="Any">
      </label>
    </div>
     <div class="row columns">
      <label for="post-description">Tech Post 
        <input type="text" name="post-description" placeholder="Any">
      </label>
    </div>
  <input class="new-post-form" type="submit" value="Submit">
  </form>
</div>

